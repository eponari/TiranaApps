<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <size android:width="280dp" android:height="140dp"/>
            <stroke android:width="1dp" android:color="@color/transparent"/>
            <solid android:color="@color/transparent"/>
            <padding android:bottom="1dp"/>
        </shape>
    </item>

    <item android:left="7dp" android:top="30dp" android:bottom="20dp" android:right="10dp">
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="@color/white"
                android:startColor="@color/white" />
            <corners android:radius="10dp" />
            <stroke
                android:width="1.5dp"
                android:color="#b4b4b4" />
        </shape>
    </item>

    <item android:left="120dp" android:top="50dp" android:bottom="50dp" android:right="120dp">
            <rotate android:fromDegrees="45" android:toDegrees="45" android:pivotX="-70%" android:pivotY="77%" >
                <shape android:shape="rectangle" >
                    <stroke android:color="@color/white" android:width="1.1dp"/>
                    <solid android:color="@color/white" />
                </shape>
            </rotate>
    </item>
</layer-list>