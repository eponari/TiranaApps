<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplicationOSMTrial" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_peal</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_peal</item>
        <item name="colorSecondaryVariant">@color/purple_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:itemBackground">@color/milky</item>
        <item name="android:textSize">16dp</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
    </style>

 <!-- Style per vendosjen e divider-it midis item te lista menuse(lista drejtorive)-->
    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#dddddd</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <!-- Style per background ne list menune -->
    <style name="Theme.MyApplicationOSMTrial.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyApplicationOSMTrial.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplicationOSMTrial.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>